<Window x:Class="PR_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:PR_5"
        mc:Ignorable="d"
        Height="600"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowDrop="True"
        FontFamily="Comic Sans MS">

    <Grid Background="#292828"
          MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="599"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image gif:ImageBehavior.AnimatedSource="/Image/бан.gif" 
               Stretch="Fill"
                Width="598" Margin="0,0,1,0"/>
        <Border Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="386"
                Height="405"
                CornerRadius="8"
                Background="#131313"
                Effect="{StaticResource MaterialDesignElevationShadow24}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Войти в систему"
                               Foreground="#423189"
                               FontWeight="Medium"
                               FontSize="20"
                               TextAlignment="Center"/>

                    <TextBlock Text="Практическая работа №5"
                               TextWrapping="Wrap"
                               FontWeight="Regular"
                               FontSize="20"
                               Foreground="#8A2BE2"
                               Margin="0 20 0 0"/>

                </StackPanel>

                <StackPanel Grid.Row="1"
                            Margin="40 0">
                    <StackPanel>
                        <TextBlock Text="Email"
                                   Foreground="#8A2BE2"
                                   FontSize="12"
                                   FontWeight="Regular"/>
                        <Border Width="300"
                                Height="40"
                                CornerRadius="10"
                                Background="#f4f4f4"
                                Padding="5"
                                BorderBrush="#8A2BE2"
                                BorderThickness="1.5">
                            <TextBox Width="290"
                                     x:Name="TbLogin"
                                     Foreground="#8A2BE2"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     materialDesign:HintAssist.Hint="Введите адрес электронной почты ..."
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#f4f4f4"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0 30 0 0 ">
                        <TextBlock Text="Password"
                                   Foreground="#8A2BE2"
                                   FontSize="12"
                                   FontWeight="Regular"/>
                        <Border Width="300"
                                Height="40"
                                CornerRadius="10"
                                Background="#f4f4f4"
                                Padding="5"
                                BorderBrush="#8A2BE2"
                                BorderThickness="1.5">
                            <PasswordBox Width="290"
                                         x:Name="PbPassword"
                                         Foreground="#8A2BE2"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         materialDesign:HintAssist.Hint="Введите пароль..."
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         materialDesign:TextFieldAssist.UnderlineBrush="#f4f4f4"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 60">
                    <Button x:Name="BtnLogin"
                            Click="BtnLogin_Click"
                            Foreground="#8A2BE2"
                            Background="Transparent"
                            BorderBrush="#8A2BE2"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="#7851A9"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            IsEnabled="{Binding DataContext.ControlsEnabked,
                                        RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Person"
                                                     Margin="0 2 3 0"/>
                            <TextBlock Text="Войти в систему"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Row="2"
                           Margin="0 30 0 0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <Run Foreground="#8A2BE2">Или получить временный</Run>
                    <Run Foreground="#7851A9"> огрониченный доступ.
                        <Run.Style>
                            <Style TargetType="Run">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations"                                      Value="Underline"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Run.Style>
                    </Run>

                </TextBlock>
            </Grid>
        </Border>

    </Grid>
</Window>
